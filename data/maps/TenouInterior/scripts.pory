//Trainers
script TrainerRandolph{
trainerbattle_single(TRAINER_RANDOLPH, RandolphIntro, RandolphLoss)
    msgbox(PostBattle_Randolph, MSGBOX_AUTOCLOSE) 
	waitmessage
}

text RandolphIntro{
    "Hey, you're getting in the way of my\nresearch! Get lost!"
}
text RandolphLoss{
    "Ugh... Fine!\nI guess you can stay."
}
text PostBattle_Randolph{
    "Just stay out of my way, OK?\nDon't make me ask nicely."
}

