}

script UsagiBay_Azurill{
    lockall
    faceplayer
    playmoncry(SPECIES_AZURILL, CRY_MODE_NORMAL)
	showmonpic(SPECIES_AZURILL, 10, 3)
    msgbox("Azuuuuurill!")
	waitmoncry
    hidemonpic
    releaseall
    end
}

