mapscripts UsagiBay_MapScripts {}

script UsagiBay_Artist
{
	lockall
    faceplayer
    goto_if_set(FLAG_ARTISAN_TRADE, ARTIST_TRADE_COMPLETE)
	msgbox(format("I'm a traveling artist looking for new\nthings to paint."))
    msgbox(format("Usagi Bay has a wonderful ladscape,\nbut I'm looking for something more animated."))
    msgbox("Do you by chance have a Smeargle?\nI'll trade it for a Pokémon from my home\lregion.", MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES)
    {
        special(ChoosePartyMon)
        waitstate
        goto_if_eq(VAR_0x8004, PARTY_NOTHING_CHOSEN, Trade_Declined)
        copyvar(VAR_0x8004, VAR_0x8005)
        specialvar(VAR_RESULT, GetTradeSpecies)
        goto_if_ne(VAR_RESULT, SPECIES_SMEARGLE, Trade_Declined)
        msgbox("Excellet!\nWhich Pokemon would you like?")
        multichoice(25, 5, MULTI_KANTO_STARTER_CHOICE, 1)
        closemessage
            if(var(VAR_RESULT) == 0)
            {
                setvar(VAR_0x8004, INGAME_TRADE_BULBASAUR)
                special(CreateInGameTradePokemon)
                special(DoInGameTradeScene)
                waitstate
                setflag(FLAG_ARTISAN_TRADE)
                return
                releaseall
                end
            }
            elif(var(VAR_RESULT) == 1)
            {
                setvar(VAR_0x8004, INGAME_TRADE_CHARMANDER)
                special(CreateInGameTradePokemon)
                special(DoInGameTradeScene)
                waitstate
                setflag(FLAG_ARTISAN_TRADE)
                return
                releaseall
                end
            }
            elif(var(VAR_RESULT) == 2)
            {
                setvar(VAR_0x8004, INGAME_TRADE_SQUIRTLE)
                special(CreateInGameTradePokemon)
                special(DoInGameTradeScene)
                waitstate
                setflag(FLAG_ARTISAN_TRADE)
                return
                releaseall
                end
            }
    }
       
    else
    {
        msgbox("Oh... Well if you should change your mind\nyou know where to find me.")
        releaseall
        end
    }

    Trade_Declined:
        msgbox("Oh why must you tease me so?")
        releaseall
        end

    ARTIST_TRADE_COMPLETE:
        msgbox("Hello, friend!\nHow is my Pokémon doing?\lYour Smeargle is just fine.")
        releaseall
        end
	
}

