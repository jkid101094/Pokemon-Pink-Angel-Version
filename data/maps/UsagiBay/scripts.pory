script StoneShop{
    lock
    faceplayer
    message("Hi and welcome to Steven's Stones.\nHow may I help you?")
    waitmessage
    if(var(VAR_BADGES_OBTAINED)==0)
    {
        pokemart(stoneshop_1)
    }
    elif(var(VAR_BADGES_OBTAINED)<=2)
    {
        pokemart(stoneshop_2)
    }
    elif(var(VAR_BADGES_OBTAINED)<=4)
    {
        pokemart(stoneshop_3)
    }
    elif(var(VAR_BADGES_OBTAINED)<=6)
    {
        pokemart(stoneshop_4)
    }
    elif(var(VAR_BADGES_OBTAINED)<=8)
    {
        pokemart(stoneshop_5)
    }
    message("We hope to see you again!")
    release
    end
}

