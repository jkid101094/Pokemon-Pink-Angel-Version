//NPCS
script Route1_Mart_Employee{
    lockall
    faceplayer
    if(flag(FLAG_ROUTE1_POTION) == FALSE){
        msgbox("Hello there!\nI see you're taking your first steps on\lyour grand adventure!")
        msgbox(format("I represent your local PokéMart and boy do I have a surprise for you!\pAll budding trainers are entitled to ONE\nFREE POTION!\pYes! An entire potion FOR FREE!"))
        msgbox(format("What are you waiting for! Take it! Take it! TAKE IT!"))
        giveitem(ITEM_POTION[1])
        msgbox("Thank you for continuing to shop at your\nlocal PokéMart!")
        setflag(FLAG_ROUTE1_POTION)
    }
    else{
        msgbox("Hey hey hey! How's my favorite newbie?\nSorry! I can't give you another potion!\lCompany policy and all.\pBut hey, cheer up!\nThere's always more at your local\lPokéMart!")
        }
    releaseall
}

script Route1_Jogger{
    lockall
    faceplayer
    msgbox("Nothing like getting in a good workout\nat the beach!\pOw!\nI stubbed my toe on a rock!")
    releaseall
}

//Item Balls
script Route1_Item_Ball_Rare_Candy{
    lockall
    giveitem(ITEM_RARE_CANDY, [1])
    setflag(FLAG_ROUTE1_RARE_CANDY)
    releaseall
}


