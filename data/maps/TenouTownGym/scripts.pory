movement PlayerFaceRight{
    face_right
}

movement PlayerResume{
    walk_left
    face_right
}

movement GetIntoPosition{
    walk_left
    walk_up
    face_right
}

movement Upx4{
    walk_up*4
    face_down
}

movement NPCTakePlace{
    walk_down*1
    walk_right*2
    walk_down*5
    face_player
}

movement PlayerApproach{
    walk_right
}

movement NPCApproach{
    walk_left
}

