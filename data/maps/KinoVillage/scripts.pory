//NPCs
script KinoVillageGardener{
    lockall
    faceplayer
    showmoneybox(0,0)
    msgbox(format("The berries in my garden here tend to grow up so healthy."))
    msgbox(format("In fact they're so impressive that people actually pay me for the soil.\pCan you believe that?"))
    msgbox("How about it? I'll sell you a Peat Block\nfor Â¥1000.", MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES){
    checkmoney(1000)
    if(var(VAR_RESULT) == TRUE){
    removemoney(1000)
    playse(SE_SHOP)
    waitse
    giveitem(ITEM_PEAT_BLOCK, [1])
    msgbox(format("Here you go!\nHope you enjoy it!"))
    }
    else{
    msgbox(format("Hey! You can't scam me! Come back with more cash!"))
    }
    }
    else{
    msgbox(format("I see...\nWell come back if you want some delicious dirt!"))
    }
    hidemoneybox
    releaseall
}

