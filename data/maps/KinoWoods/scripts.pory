//Asuka Movement
text AsukaLoseText {
    "I see you're already coming into\nyour own."
}

movement AsukaSearch{
    face_left
    delay_16
    face_right
    delay_16
    jump_in_place_up
    delay_16
}

movement AsukaApproachLeft{
    walk_down*2
}

movement AsukaApproachRight{
    walk_right
    walk_down*2
}

movement AsukaLeave{
    walk_up*5
}

